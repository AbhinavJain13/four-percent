__author__ = 'Koala'
x = "There are %d images on the wall." % 20
im_from_Aus = "images from Australia"
im_from_Wen = "images from Wenezuela"

y = "Out of the %d images, There are " % 20

print(x)
print(y)
print(y, %d, im_from_Aus, "and ", %d, im_from_Wen) % (10, 10)

# correct version
print("NEXT EXAMPLE:")
x = "There are {0} images on the wall.".format(20)
im_from_Aus = "images from Australia"
im_from_Ven = "images from Venezuela."
y = "Out of the {0} images, There are".format(20)
print(x)
print(y, "{0}".format(5), im_from_Aus, "and", "{0}".format(15), im_from_Ven)
# alternative, with keeping order:
print(y, "{0}".format(5), im_from_Aus, "and", "{1}".format(5, 15), im_from_Ven)
